<Defs>

  <!-- affecting opinion -->

  <ThoughtDef> <!--These thought workers react to whether both pawns have Insectoid Presence. -->
    <defName>BTEIst_InsectoidPresence</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>BTE_IST.ThoughtWorker_InsectoidPresence</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>non insectoid vs insectoid</label>
        <baseOpinionOffset>-40</baseOpinionOffset>
      </li>
      <li>
        <label>both insectoids</label>
        <baseOpinionOffset>20</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  
