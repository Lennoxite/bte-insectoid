        <li>r_name->[adj][hiv] [greek]</li>


        <li>adj->steel</li>
        <li>adj->smoke</li>
        <li>adj->corpse</li>
        <li>adj->sharp</li>
        <li>adj->crawl</li>

        <li>hiv->nest</li>
        <li>hiv->hive</li>
		
        <li>greek->alpha</li>
        <li>greek->beta</li>
        <li>greek->omega</li>
        <li>greek->gamma</li>
        <li>greek->phi</li>
        <li>greek->nu</li>

      </rulesStrings>
    </rulePack>
